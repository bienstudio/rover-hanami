%form{action: routes.trip_path(id: current_trip.id), method: 'POST'}
  %input{type: 'hidden', name: '_method', value: 'PATCH'}
  %input{type: 'hidden', name: '_csrf_token', value: csrf_token}
  %p
    %label{for: 'trip_name'} Name
    %input{type: 'text', name: 'trip[name]', id: 'trip_name', value: current_trip.name}
  %p
    %label{for: 'trip_start_date'} Start date
    %input{type: 'date', name: 'trip[start_date]', id: 'trip_start_date', value: current_trip.start_date}
  %p
    %label{for: 'trip_end_date'} End date
    %input{type: 'date', name: 'trip[end_date]', id: 'trip_end_date', value: current_trip.end_date}
  %p
    %button{type: 'submit'} Save
